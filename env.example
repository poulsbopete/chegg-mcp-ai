# Elastic Cloud Configuration
ELASTIC_CLOUD_ID=your_cloud_id_here
ELASTIC_API_KEY=your_api_key_here
ELASTIC_ENDPOINT=https://your-deployment.elastic.co
ELASTIC_USERNAME=elastic
ELASTIC_PASSWORD=your_password_here

# Elastic Serverless Configuration (Alternative)
ELASTICSEARCH_HOST=https://ai-assistants-ffcafb.es.us-east-1.aws.elastic.cloud
ELASTICSEARCH_PORT=443
ELASTICSEARCH_API_KEY=
ELASTICSEARCH_INDEX=search-chegg

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000

# Elastic Index Prefix
ELASTIC_INDEX_PREFIX=chegg-demo

# AI Assistant Configuration
ELASTIC_AI_ASSISTANT_ENABLED=true
ELASTIC_AI_ASSISTANT_MODEL=elser_model_2

# ML Model Configuration
ELASTIC_ML_ENABLED=true
ELASTIC_ML_ANOMALY_DETECTION_ENABLED=true
ELASTIC_ML_FRAUD_DETECTION_ENABLED=true

# Security Configuration
ELASTIC_SECURITY_ENABLED=true
ELASTIC_SIEM_ENABLED=true
ELASTIC_SOAR_ENABLED=true

# APM Configuration
ELASTIC_APM_ENABLED=true
ELASTIC_APM_SERVICE_NAME=chegg-demo-backend
ELASTIC_APM_SECRET_TOKEN=your_apm_secret_token

# Weather API (for climate risk demo)
WEATHER_API_KEY=your_weather_api_key
WEATHER_API_ENDPOINT=https://api.openweathermap.org/data/2.5

# Sample Data Configuration
SAMPLE_DATA_ENABLED=true
SAMPLE_CLAIMS_COUNT=10000
SAMPLE_CALLS_COUNT=5000
SAMPLE_SECURITY_EVENTS_COUNT=2000

# Dashboard Configuration
KIBANA_URL=https://your-deployment.kb.elastic.co
KIBANA_SPACE=chegg-demo

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Database Configuration (if using additional database)
DATABASE_URL=postgresql://user:password@localhost:5432/chegg_demo

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Slack Configuration (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#chegg-demo-alerts

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# File Upload Configuration
UPLOAD_MAX_SIZE=10mb
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_ENABLED=true
